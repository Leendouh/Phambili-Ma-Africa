<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Products">

    <!-- Sticky Header Section -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:background="#FFFFFF"
            app:layout_scrollFlags="scroll|enterAlways|snap">

            <!-- Hamburger Menu Button -->
            <ImageView
                android:id="@+id/hamburger_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_menu"
                android:contentDescription="Toggle menu"
                android:adjustViewBounds="true" />

            <!-- Spacer to push logo to center -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Logo -->
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:contentDescription="Phambili Ma-Africa Logo"
                android:src="@drawable/ic_logo"
                android:adjustViewBounds="true" />

            <!-- Spacer to push icons to right -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Icons Container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- User Icon -->
                <ImageView
                    android:id="@+id/user_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_user"
                    android:contentDescription="User Profile"
                    android:adjustViewBounds="true" />

                <!-- Cart Button -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp">

                    <ImageView
                        android:id="@+id/cart_btn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_cart"
                        android:contentDescription="Shopping Cart"
                        android:adjustViewBounds="true" />

                    <TextView
                        android:id="@+id/cart_badge"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="end|top"
                        android:background="@drawable/cart_badge_bg"
                        android:text="0"
                        android:textColor="#FFF"
                        android:textSize="10sp"
                        android:gravity="center" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#F5F6FA"
            android:paddingTop="96dp"> <!-- Added padding to account for header height -->

            <!-- Section Title -->
            <TextView
                android:id="@+id/services_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cleaning Products"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#0066CC"
                android:gravity="center_horizontal"
                android:paddingBottom="16dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Coming Soon Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_outline_blue"
                android:padding="24dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_broom"
                    android:contentDescription="Coming Soon Icon"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coming Soon!"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#0066CC"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="8dp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Be the first to know when our premium cleaning products launch. Get exclusive early access and special offers."
                    android:textColor="#333"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:paddingBottom="16dp" />

                <!-- Email input and button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/email_input"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Enter your email address"
                        android:inputType="textEmailAddress"
                        android:padding="12dp"
                        android:textSize="15sp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="sans-serif" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/notify_btn"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Notify Me"
                        android:backgroundTint="#0066CC"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:fontFamily="sans-serif-medium"
                        app:cornerRadius="12dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Product Categories Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true"
                android:rowOrderPreserved="false"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp">

                <!-- Surface Cleaners -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_white_rounded"
                    android:gravity="center"
                    android:layout_row="0"
                    android:layout_column="0">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_spray_can"
                        android:contentDescription="Surface Cleaners Icon"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Surface Cleaners"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#0066CC"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Multi-surface solutions"
                        android:textSize="13sp"
                        android:textColor="#777"
                        android:layout_marginTop="4dp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Disinfectants -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_white_rounded"
                    android:gravity="center"
                    android:layout_row="0"
                    android:layout_column="1">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_soap"
                        android:contentDescription="Disinfectants Icon"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disinfectants"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#0066CC"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hospital-grade protection"
                        android:textSize="13sp"
                        android:textColor="#777"
                        android:layout_marginTop="4dp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Air Fresheners -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_white_rounded"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="0">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_wind"
                        android:contentDescription="Air Fresheners Icon"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Air Fresheners"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#0066CC"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Long-lasting fragrance"
                        android:textSize="13sp"
                        android:textColor="#777"
                        android:layout_marginTop="4dp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Cleaning Tools -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_white_rounded"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="1">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_broom1"
                        android:contentDescription="Cleaning Tools Icon"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cleaning Tools"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#0066CC"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Professional equipment"
                        android:textSize="13sp"
                        android:textColor="#777"
                        android:layout_marginTop="4dp"
                        android:gravity="center" />
                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>