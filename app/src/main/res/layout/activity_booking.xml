<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Booking">


    <!-- Sticky Header Section -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:background="#FFFFFF"
            app:layout_scrollFlags="scroll|enterAlways|snap">

            <!-- Hamburger Menu Button -->
            <ImageView
                android:id="@+id/hamburger_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_menu"
                android:contentDescription="Toggle menu"
                android:adjustViewBounds="true" />

            <!-- Spacer to push logo to center -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Logo -->
            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="fitCenter"
                android:contentDescription="Phambili Ma-Africa Logo"
                android:src="@drawable/ic_logo"
                android:adjustViewBounds="true" />

            <!-- Spacer to push icons to right -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Icons Container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- User Icon -->
                <ImageView
                    android:id="@+id/user_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_user"
                    android:contentDescription="User Profile"
                    android:adjustViewBounds="true" />

                <!-- Cart Button -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp">

                    <ImageView
                        android:id="@+id/cart_btn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_cart"
                        android:contentDescription="Shopping Cart"
                        android:adjustViewBounds="true" />

                    <TextView
                        android:id="@+id/cart_badge"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="end|top"
                        android:background="@drawable/cart_badge_bg"
                        android:text="0"
                        android:textColor="#FFF"
                        android:textSize="10sp"
                        android:gravity="center" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Your Cleaning Service"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#0066CC"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="18dp"/>

            <!-- Booking Card Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_white_rounded"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="24dp">

                <!-- Service Type Spinner -->

                <!-- Property Type Spinner -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select type of service"
                    android:textSize="15sp"
                    android:textColor="#222"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="4dp"/>
                <Spinner
                    android:id="@+id/service_type"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="14dp"
                    android:background="@drawable/rounded_edittext"
                    android:paddingHorizontal="12dp"
                    android:spinnerMode="dropdown"
                    android:textColor="#A0A6B2"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select property type"
                    android:textSize="15sp"
                    android:textColor="#222"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="4dp"/>
                <Spinner
                    android:id="@+id/property_type"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/rounded_edittext"
                    android:paddingHorizontal="12dp"
                    android:textColor="#A0A6B2"
                    android:textSize="16sp"
                    android:layout_marginBottom="14dp"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Size in square meter (m2)"
                    android:textColor="#222"
                    android:textSize="15sp" />
                <!-- Property Size Input -->

                <EditText
                    android:id="@+id/property_size"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="14dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Enter size in square meter (mÂ²)"
                    android:inputType="number"
                    android:paddingHorizontal="12dp"
                    android:textColor="#444"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Special Instructions"
                    android:textSize="15sp"
                    android:textColor="#222"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="4dp"/>
                <!-- Date & Time Spinner -->
                <Spinner
                    android:id="@+id/preferred_datetime"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/rounded_edittext"
                    android:paddingHorizontal="12dp"
                    android:textColor="#A0A6B2"
                    android:textSize="16sp"
                    android:layout_marginBottom="14dp"
                    android:spinnerMode="dropdown" />

                <!-- Special Instructions -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Special Instructions"
                    android:textSize="15sp"
                    android:textColor="#222"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/special_instructions"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint=""
                    android:inputType="textMultiLine"
                    android:textColor="#444"
                    android:textSize="15sp"
                    android:paddingHorizontal="12dp"
                    android:gravity="top"
                    android:layout_marginBottom="18dp"/>

                <!-- Submit Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Request Booking"
                    android:textColor="#FFF"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:backgroundTint="#0066CC"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="6dp"
                    android:elevation="2dp"
                    app:cornerRadius="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>