<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Gallery">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/ic_logo"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Phambili Ma-Africa Trading Enterprise Logo"
            android:layout_marginBottom="25dp"/>

        <!-- Log In Title -->
        <TextView
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textColor="#0066CC"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginBottom="6dp"/>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/login_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back to your account"
            android:textColor="#A0A6B2"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <!-- Email Field -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:background="@drawable/input_bg_rounded"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <!-- Email Icon - Debug Version -->
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_dialog_email"
                android:contentDescription="Email icon" />

            <EditText
                android:id="@+id/login_email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Email address"
                android:textColor="#222"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"/>
        </LinearLayout>

        <!-- Password Field -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:background="@drawable/input_bg_rounded"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <!-- Password Icon - Debug Version -->
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_lock_lock"
                android:contentDescription="Password icon" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Password"
                android:textColor="#222"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:inputType="textPassword"
                android:paddingStart="10dp"/>

            <!-- Eye Icon - Debug Version -->
            <ImageButton
                android:id="@+id/login_toggle_password"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="#CCCCCC"
                android:src="@android:drawable/ic_menu_view"
                android:contentDescription="Show password" />
        </LinearLayout>

        <!-- Remember Me and Forgot Password Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="22dp">

            <CheckBox
                android:id="@+id/login_remember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:buttonTint="#222"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember me"
                android:textColor="#222"
                android:textSize="15sp"
                android:paddingStart="6dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/login_forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password?"
                android:textColor="#0066CC"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <!-- Log In Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Log In"
            android:textColor="#FFF"
            android:textSize="17sp"
            android:textStyle="bold"
            android:backgroundTint="#0066CC"
            android:fontFamily="sans-serif-medium"
            android:elevation="2dp"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="0dp"
            app:cornerRadius="12dp"/>

        <!-- Sign Up Divider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/login_no_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textColor="#A0A6B2"
                android:textSize="15sp"
                android:paddingEnd="4dp"/>

            <TextView
                android:id="@+id/login_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:textColor="#FFD600"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <!-- Or sign up with divider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#EAEAEA"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  or sign up with  "
                android:textColor="#A0A6B2"
                android:textSize="14sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#EAEAEA"/>
        </LinearLayout>

        <!-- Social Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/login_google"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Google"
                android:textColor="#222"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/auth_social_btn_bg"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginEnd="8dp"
                style="@style/Widget.AppCompat.Button.Borderless"/>

            <Button
                android:id="@+id/login_facebook"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Facebook"
                android:textColor="#222"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/auth_social_btn_bg"
                android:drawableLeft="@android:drawable/ic_menu_help"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="8dp"
                style="@style/Widget.AppCompat.Button.Borderless"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>