<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Services">

    <ScrollView
        android:id="@+id/services_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F4FAFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            android:gravity="center_horizontal">

            <!-- Sticky Header Section -->
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="#FFFFFF"
                    app:layout_scrollFlags="scroll|enterAlways|snap">

                    <!-- Hamburger Menu Button -->
                    <ImageView
                        android:id="@+id/hamburger_btn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_menu"
                        android:contentDescription="Toggle menu"
                        android:adjustViewBounds="true" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <!-- Logo -->
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="fitCenter"
                        android:contentDescription="Phambili Ma-Africa Logo"
                        android:src="@drawable/ic_logo"
                        android:adjustViewBounds="true" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <!-- Icons Container -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- User Icon -->
                        <ImageView
                            android:id="@+id/user_btn"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_user"
                            android:contentDescription="User Profile"
                            android:adjustViewBounds="true" />

                        <!-- Cart Button -->
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp">

                            <ImageView
                                android:id="@+id/cart_btn"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_cart"
                                android:contentDescription="Shopping Cart"
                                android:adjustViewBounds="true" />

                            <TextView
                                android:id="@+id/cart_badge"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="end|top"
                                android:background="@drawable/cart_badge_bg"
                                android:text="0"
                                android:textColor="#FFF"
                                android:textSize="10sp"
                                android:gravity="center" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/services_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Services"
                android:textColor="#0066CC"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="3dp"
                android:gravity="center"/>

            <!-- Subtitle -->
            <TextView
                android:id="@+id/services_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discover the range of professional cleaning solutions we offer to make your space spotless."
                android:textColor="#444"
                android:textSize="15sp"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginBottom="18dp"/>

            <!-- Service Cards Grid: 2 columns, phone format, NO description -->
            <GridLayout
                android:id="@+id/services_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true"
                android:layout_marginBottom="18dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp">

                <!-- Service Card 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_bg"
                    android:padding="10dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="2dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:src="@drawable/deepcleaning"
                        android:scaleType="centerCrop"
                        android:contentDescription="Deep Cleaning"
                        android:background="@drawable/card_img_bg"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deep Cleaning"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From R350"
                        android:textColor="#0066CC"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="7dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/book_deep_cleaning"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:text="Book Service"
                        android:textColor="#FFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:backgroundTint="#0066CC"
                        app:cornerRadius="9dp"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>

                <!-- Service Card 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_bg"
                    android:padding="10dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="2dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:src="@drawable/officecleaning"
                        android:scaleType="centerCrop"
                        android:contentDescription="Office Cleaning"
                        android:background="@drawable/card_img_bg"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Office Cleaning"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From R500"
                        android:textColor="#0066CC"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="7dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/book_office_cleaning"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:text="Book Service"
                        android:textColor="#FFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:backgroundTint="#0066CC"
                        app:cornerRadius="9dp"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>

                <!-- Service Card 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_bg"
                    android:padding="10dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="2dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:src="@drawable/windowcleaning"
                        android:scaleType="centerCrop"
                        android:contentDescription="Window Cleaning"
                        android:background="@drawable/card_img_bg"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Window Cleaning"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From R500"
                        android:textColor="#0066CC"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="7dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/book_window_cleaning"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:text="Book Service"
                        android:textColor="#FFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:backgroundTint="#0066CC"
                        app:cornerRadius="9dp"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>

                <!-- Service Card 4 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_bg"
                    android:padding="10dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="2dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:src="@drawable/carpetcleaning"
                        android:scaleType="centerCrop"
                        android:contentDescription="Carpet Cleaning"
                        android:background="@drawable/card_img_bg"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carpet Cleaning"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From R300"
                        android:textColor="#0066CC"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="7dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/book_carpet_cleaning"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:text="Book Service"
                        android:textColor="#FFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:backgroundTint="#0066CC"
                        app:cornerRadius="9dp"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>

                <!-- Service Card 5 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_bg"
                    android:padding="10dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="2dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:src="@drawable/upholsterycleaning"
                        android:scaleType="centerCrop"
                        android:contentDescription="Upholstery Cleaning"
                        android:background="@drawable/card_img_bg"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upholstery Cleaning"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From R400"
                        android:textColor="#0066CC"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="7dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/book_upholstery_cleaning"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:text="Book Service"
                        android:textColor="#FFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:backgroundTint="#0066CC"
                        app:cornerRadius="9dp"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>

                <!-- Service Card 6 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_bg"
                    android:padding="10dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="2dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:src="@drawable/service_products"
                        android:scaleType="centerCrop"
                        android:contentDescription="Cleaning Products"
                        android:background="@drawable/card_img_bg"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cleaning Products"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prices Vary"
                        android:textColor="#0066CC"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="7dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/book_products"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:text="Book Service"
                        android:textColor="#FFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:backgroundTint="#0066CC"
                        app:cornerRadius="9dp"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>